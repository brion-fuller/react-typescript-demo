{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noImplicitAny": true,//currently false but should be true in the future ideally
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react"
    }
}